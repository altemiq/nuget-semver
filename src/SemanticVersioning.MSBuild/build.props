<?xml version="1.0" encoding="utf-8"?>
<Project>

  <PropertyGroup Condition=" '$(VersioningTaskAssembly)' == '' ">
    <_RuntimeFolder Condition=" '$(MSBuildRuntimeType)' == 'Core' ">netstandard2.0</_RuntimeFolder >
    <_RuntimeFolder  Condition=" '$(MSBuildRuntimeType)' != 'Core' ">net461</_RuntimeFolder >
    <VersioningTaskDirectory>$(MSBuildThisFileDirectory)..\tasks\$(_RuntimeFolder)\</VersioningTaskDirectory>
    <VersioningTaskAssembly>$(VersioningTaskDirectory)$(MSBuildThisFileName).dll</VersioningTaskAssembly>
  </PropertyGroup>

  <UsingTask TaskName="Altavec.SemanticVersioning.GetProjectCommitsTask" AssemblyFile="$(VersioningTaskAssembly)"/>
  <UsingTask TaskName="Altavec.SemanticVersioning.GetHeadCommitsTask" AssemblyFile="$(VersioningTaskAssembly)"/>
  <UsingTask TaskName="Altavec.SemanticVersioning.GetReferencedProjectsTask" AssemblyFile="$(VersioningTaskAssembly)"/>
  <UsingTask TaskName="Altavec.SemanticVersioning.GetLatestCommitTask" AssemblyFile="$(VersioningTaskAssembly)"/>
  <UsingTask TaskName="Altavec.SemanticVersioning.GetBranchNameTask" AssemblyFile="$(VersioningTaskAssembly)"/>
  <UsingTask TaskName="Altavec.SemanticVersioning.SemanticVersioningTask" AssemblyFile="$(VersioningTaskAssembly)"/>
  <UsingTask TaskName="Altavec.SemanticVersioning.ReadVersionFromFile" AssemblyFile="$(VersioningTaskAssembly)"/>
  <UsingTask TaskName="Altavec.SemanticVersioning.WriteVersionToFile" AssemblyFile="$(VersioningTaskAssembly)"/>

  <PropertyGroup>
    <ComputeSemanticVersion>false</ComputeSemanticVersion>
    <ForceSemanticVersion>true</ForceSemanticVersion>
    <OnlyComputeSemanticVersionForPackable>true</OnlyComputeSemanticVersionForPackable>
    <SemanticVersionIncrement>Patch</SemanticVersionIncrement>
  </PropertyGroup>

</Project>